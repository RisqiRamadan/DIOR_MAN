                        android:textSize="8dp" />

                    <Button
                        android:id="@+id/btndeskripsibaju4"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/white"
                        android:clickable="true"
                        android:fontFamily="@font/arvobold"
                        android:gravity="left|right|center"
                        android:text="New for Spring 2024 and part of the DIOR AND OTANI WORKSHOP collaboration, the long-sleeved polo shirt showcases the allover Dior Oblique jacquard and is further enhanced by one of the season's signature motifs. "
                        android:textColor="@color/Abu1"
                        android:textSize="8.5dp" />

                    <TextView
                        android:id="@+id/tvhargabaju4"
