    android:layout_height="match_parent"
    tools:context=".BajuActivity">

    <TextView
        android:background="@color/PrimaryColor"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:fontFamily="@font/diorfont"
        android:text="MEN'S FASHION"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:background="@color/PrimaryColor"
        android:layout_gravity="center"
        android:fontFamily="@font/popsb"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="   MENSWEAR"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- BAJU 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/backdepan"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/ivbaju1"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:src="@drawable/baju1" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvnamabaju1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="3dp"
                        android:backgroundTint="@color/white"
                        android:clickable="true"
                        android:fontFamily="@font/arvobold"
                        android:gravity="center"
                        android:text="Bobby Sweater"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tvreferensibaju1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:clickable="true"
                        android:fontFamily="@font/arvobold"
                        android:gravity="center"
                        android:text="Blue Cashmere Jacquard"
                        android:textColor="@color/Abu2"
                        android:textSize="8dp" />

                    <Button
                        android:id="@+id/btndeskripsibaju1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/white"
                        android:clickable="true"
                        android:fontFamily="@font/arvobold"
                        android:gravity="left|right|center"
                        android:text="New for Summer 2024, the sweater pays tribute to Mr. Dior's pet, Crafted in blue cashmere jacquard, it is embellished with a Bobby patch. The sweater can be worn with any casual outfit."
                        android:textColor="@color/Abu1"
                        android:textSize="8.5dp" />

                    <TextView
                        android:id="@+id/tvhargabaju1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:clickable="true"
                        android:fontFamily="@font/arvobold"
                        android:gravity="center"
                        android:text="Rp. 41.000.000,00"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                </LinearLayout>
            </LinearLayout>
            <!-- BAJU 2 -->
