                        android:textSize="8dp" />

                    <Button
                        android:id="@+id/btndeskripsibaju2"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/white"
                        android:clickable="true"
                        android:fontFamily="@font/arvobold"
                        android:gravity="left|right|center"
                        android:text="New for Summer 2024, the T-shirt features a classic silhouette with a sporty style. The T-shirt can be styled with jeans or track pants to create different casual looks."
                        android:textColor="@color/Abu1"
                        android:textSize="8.5dp" />

                    <TextView
                        android:id="@+id/tvhargabaju2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:clickable="true"
                        android:fontFamily="@font/arvobold"
                        android:gravity="center"
                        android:text="Rp. 20.000.000,00"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
            <!-- BAJU 3 -->
